<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Welcome">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Galgeleg - gæt ordet!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:src="@mipmap/overskrift"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPIL"
        android:id="@+id/spilButton"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/reglerButton"
        android:layout_alignEnd="@+id/listOrdButton"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VÆLG ORD"
        android:id="@+id/listOrdButton"
        android:layout_below="@+id/spilButton"
        android:layout_centerHorizontal="true"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGLER"
        android:id="@+id/reglerButton"
        android:layout_below="@+id/listOrdButton"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/listOrdButton"
        android:layout_alignEnd="@+id/listOrdButton"
        android:textSize="25sp" />
    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:indeterminate="false"
        android:layout_below="@+id/reglerButton"
        android:layout_toRightOf="@+id/buttonscore"
        android:layout_toEndOf="@+id/buttonscore"
        android:layout_marginTop="31dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score"
        android:id="@+id/buttonscore"
        android:textSize="25sp"
        android:layout_below="@+id/reglerButton"
        android:layout_alignLeft="@+id/reglerButton"
        android:layout_alignStart="@+id/reglerButton"
        android:layout_alignRight="@+id/reglerButton"
        android:layout_alignEnd="@+id/reglerButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Spillere"
        android:id="@+id/ToSpillereIMenu"
        android:layout_below="@+id/buttonscore"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_alignStart="@+id/reglerButton"
        android:layout_alignEnd="@+id/reglerButton" />


</RelativeLayout>
